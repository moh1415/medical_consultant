   <div class="container">
  <h2></h2>
  <p> </p>
    <div class="row">

      <div class='col-md-12'>
    
<%= form_with model: @session,local: true do |form| %>
          <p class="h4 mb-4">Update Session</p>

          <!-- Name -->
          <%= form.text_field :title, class: "form-control mb-4" , placeholder: "Title" %>
          <div class="form-group">
              <%= form.text_area :description , class:"form-control rounded-0" , placeholder: "Description of the disease", rows: "3", :class => "tinymce" %>
          </div>
<div class="form-group">
         <%= form.date_select :date, :class => 'form-control mb-4' %>
         

</div>
          <!-- Subject -->
          <div class="form-group">
          <label>Doctors</label>
         <%@list_doc = User.where(:is_role => 'doctor')%> 
           <%= form.collection_select :user_id, @list_doc, :id, :fullname ,class:"browser-default custom-select mb-4"%>
          </div>
       
          <%# <div class="form-group">
              <%= form.text_area :description , class:"form-control rounded-0" , placeholder: "Description of the disease", rows: "3" %>
          <%# </div> %> 
         <div class="form-group">
          <%= form.label :medical_Report %>
          <%= form.file_field :file , class:"form-control-file border" %>

         </div>
         

          <!-- Send button -->
          <%= form.submit  class:"btn btn-info btn-block"%>
          <br>
          <%= link_to 'Back to your Sessions', sessions_path, class: 'btn btn-secondary col-md-12' %>

      <% end %>
        <br><br><br><br>


    
    </div>
    </div>





